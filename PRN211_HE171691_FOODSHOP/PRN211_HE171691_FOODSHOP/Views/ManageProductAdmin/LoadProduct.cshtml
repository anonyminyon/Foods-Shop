@model IEnumerable<PRN211_HE171691_FOODSHOP.Models.ProductHe171691>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "LoadProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>LoadProduct</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriesCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var product in @ViewBag.ProductList)
            {
                <tr>
                    <td>
                        @(product.ProductName)
                    </td>
                    <td>
                        @(product.Price)
                    </td>
                    <td>
                        @(product.Description)
                    </td>
                    <td>
                        @(product.StockQuantity)
                    </td>
                    <td>
                        @(product.CategoriesCategoriesId)
                    </td>
                    <td>
                        <span>
                            <form method="get" asp-action="Details" asp-route-id="@product.ProductId">
                                <button type="submit">Details</button>
                            </form>
                        </span>
                        <span>
                            <form asp-action="Delete" asp-route-id="@product.ProductId">
                                <button type="submit">Delete</button>
                            </form>
                        </span>                       
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
